# HAILEI Environment Configuration
# Copy this file to .env and customize for your deployment

# Application Environment
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=info

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
MAX_WORKERS=4
WORKER_TIMEOUT=120

# Security
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=*

# Database Configuration (PostgreSQL)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=hailei
POSTGRES_USER=hailei
POSTGRES_PASSWORD=hailei_secure_password_change_this
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/${REDIS_DB}

# OpenAI Configuration (if using)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000

# Anthropic Configuration (if using)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# CrewAI Configuration
CREWAI_TELEMETRY=false
CREWAI_LOG_LEVEL=INFO

# HumanLayer Configuration
HUMANLAYER_API_KEY=your-humanlayer-api-key-here
HUMANLAYER_BACKEND_URL=https://api.humanlayer.dev

# Monitoring Configuration
PROMETHEUS_ENABLED=true
GRAFANA_PASSWORD=admin_change_this

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@yourdomain.com

# File Storage
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=50MB

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Session Configuration
SESSION_TIMEOUT=3600
MAX_ACTIVE_SESSIONS=1000

# WebSocket Configuration
WEBSOCKET_TIMEOUT=3600
MAX_WEBSOCKET_CONNECTIONS=500

# Logging Configuration
LOG_FORMAT=json
LOG_FILE=./logs/hailei.log
LOG_ROTATION=daily
LOG_RETENTION_DAYS=30

# Performance Tuning
ASYNC_POOL_SIZE=10
CONNECTION_POOL_SIZE=20
QUERY_TIMEOUT=30

# Feature Flags
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true
ENABLE_API_DOCS=true
ENABLE_FRONTEND_ROUTES=true

# Development/Testing
TEST_DATABASE_URL=postgresql://test:test@localhost:5432/hailei_test
PYTEST_TIMEOUT=300